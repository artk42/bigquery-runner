{
  "private": true,
  "name": "core",
  "main": "src/index.ts",
  "scripts": {
    "lint": "eslint \"./src/**/*.ts\"",
    "lint-fix": "npm run lint -- --fix",
    "test": "tsc && jest --silent=false",
    "test-coverage": "npm run test -- --coverage --coverageDirectory ../../coverage/core",
    "test-watch": "npm run test -- --watchAll"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
