{
  "private": true,
  "name": "extension",
  "main": "src/extension.ts",
  "scripts": {
    "dev": "run-p build:watch",
    "build": "tsc && esbuild ./src/index.ts --bundle --outfile=../../out/extension/index.js --external:vscode --format=cjs --platform=node",
    "build:test": "tsc -p ./",
    "build:watch": "npm run build -- --sourcemap --watch",
    "build:debug": "npm run build -- --sourcemap",
    "build:production": "npm run build -- --minify",
    "pretest": "run-p build:test lint",
    "lint": "eslint \"./src/**/*.ts\"",
    "fix": "run-p fix:*",
    "fix:lint": "npm run lint -- --fix",
    "fix:format": "npm run format -- --write",
    "check": "npm run format -- --check",
    "test": "tsc && node ../../out/test/runTest.js",
    "format": "prettier --write src"
  }
}
